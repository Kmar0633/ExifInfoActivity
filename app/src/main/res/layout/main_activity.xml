<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_mainActivity_testText"
            android:layout_width="103dp"
            android:layout_height="47dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="100dp" />

        <Button
            android:id="@+id/btn_mainActivity_buttonLoadPicture"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="Load Picture" />
    </RelativeLayout>
<TextView
    android:id="@+id/text_mainActivity_date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="500dp"
    android:layout_marginBottom="500dp"

    />
    <TextView
        android:id="@+id/text_mainActivity_exifVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginBottom="500dp"

        />
    <TextView
        android:id="@+id/text_mainActivity_orientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:layout_marginBottom="500dp"

        />


    <ImageView
        android:id="@+id/img_mainActivity_loadedImg"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="300dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

</RelativeLayout>